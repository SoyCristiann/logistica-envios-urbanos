               </children>
            </HBox>
              <GridPane alignment="CENTER" layoutX="100.0" layoutY="604.0" prefHeight="30.0" prefWidth="1017.0">
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="437.0" minWidth="0.0" prefWidth="267.0" />
