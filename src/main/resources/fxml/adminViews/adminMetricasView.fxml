<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="763.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.uniquindio.pgII.logistica.controlador.adminController.MetricasAdminController">
    <children>
        <HBox alignment="TOP_LEFT" prefHeight="763.0" prefWidth="1200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="TOP_CENTER" prefHeight="763.0" prefWidth="300.0" style="-fx-background-color: #f4f4f4;">
                    <children>
                        <Label text="PANEL DE MÉTRICAS" textFill="#2a457a">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="20.0" top="30.0" />
                            </VBox.margin>
                        </Label>

                        <Button fx:id="btnServiciosAdicionales" mnemonicParsing="false" onAction="#handleServiciosUsadosClick" prefHeight="40.0" prefWidth="250.0" text="Servicios Adicionales Usados" textAlignment="CENTER" wrapText="true">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>

                        <Button fx:id="btnTiemposEntrega" mnemonicParsing="false" onAction="#handleTiemposEntregaClick" prefHeight="40.0" prefWidth="250.0" text="Tiempos Promedio de Entrega" textAlignment="CENTER" wrapText="true">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>

                        <Button fx:id="btnIngresos" mnemonicParsing="false" onAction="#handleIngresosClick" prefHeight="40.0" prefWidth="250.0" text="Ingresos por Periodo" textAlignment="CENTER" wrapText="true">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Button>

                    </children>
                </VBox>

                <AnchorPane fx:id="contentPane" prefHeight="763.0" prefWidth="900.0">
                    <children>
                        <Label layoutX="100.0" layoutY="100.0" text="Seleccione una métrica del panel izquierdo para visualizarla." />
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>