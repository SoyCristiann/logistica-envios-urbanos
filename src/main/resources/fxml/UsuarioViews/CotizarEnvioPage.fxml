<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800" prefWidth="1200"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.uniquindio.pgII.logistica.controlador.usuarioController.CotizarEnvioController">

    <children>
        <VBox alignment="CENTER" spacing="25" prefHeight="800" prefWidth="1200">
            <padding>
                <Insets top="30" bottom="30" left="100" right="100" />
            </padding>

            <!-- Título -->
            <Label text="Cotizar Envío">
                <font>
                    <Font size="38" />
                </font>
            </Label>

            <!-- Datos del envío -->
            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="150" />
                    <ColumnConstraints prefWidth="300" />
                </columnConstraints>

                <children>
                    <Label text="Origen:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="txtOrigen" promptText="Ciudad de origen" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Destino:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="txtDestino" promptText="Ciudad de destino" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Peso (kg):" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextField fx:id="txtPeso" promptText="Ejemplo: 2.5" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Dimensiones (cm):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="txtDimensiones" promptText="Ejemplo: 30x20x10" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </children>
            </GridPane>

            <!-- Servicios adicionales -->
            <VBox alignment="CENTER_LEFT" spacing="10">
                <Label text="Servicios adicionales:" style="-fx-font-weight: bold; -fx-underline: true;" />
                <HBox spacing="25">
                    <children>
                        <CheckBox fx:id="chkSeguro" text="Seguro" />
                        <CheckBox fx:id="chkFragil" text="Frágil" />
                        <CheckBox fx:id="chkFirma" text="Firma requerida" />
                        <CheckBox fx:id="chkPrioritario" text="Prioritario" />
                    </children>
                </HBox>
            </VBox>

            <!-- Botones -->
            <HBox alignment="CENTER" spacing="40">
                <Button fx:id="btnCotizar" onAction="#cotizarEnvio" text="Cotizar Envío" prefWidth="220" prefHeight="40" />
                <Button onAction="#volverMenu" text="Volver al Menú" prefWidth="220" prefHeight="40" />
            </HBox>

            <!-- Resultado -->
            <Label fx:id="lblResultado" alignment="CENTER" wrapText="true"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" text="" textFill="black" />
        </VBox>
    </children>
</AnchorPane>
